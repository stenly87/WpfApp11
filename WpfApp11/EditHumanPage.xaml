<Page x:Class="WpfApp11.EditHumanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="Фамилия"/>
        <TextBox Text="{Binding LastName}"/>
        <Label Content="Имя"/>
        <TextBox Text="{Binding FirstName}"/>
        <Button Content="Save" Click="AddHuman" HorizontalAlignment="Center" Padding="5" Margin="3"/>
        <Button Content="List humans" Click="ListHuman" HorizontalAlignment="Center" Padding="5" Margin="3"/>
    </StackPanel>
</Page>
